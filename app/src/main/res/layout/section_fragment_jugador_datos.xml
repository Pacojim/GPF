<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageViewJugadorDatos"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/jugador_default"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewNombreJugadorDatos"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageViewJugadorDatos" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textViewApellido1JugadorDatos"
        android:layout_below="@+id/textViewNombreJugadorDatos"
        android:layout_toEndOf="@+id/imageViewJugadorDatos" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textViewApellido2JugadorDatos"
        android:layout_below="@+id/textViewApellido1JugadorDatos"
        android:layout_toEndOf="@+id/imageViewJugadorDatos" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewApodoJugadorDatos"
        android:layout_below="@+id/textViewApellido2JugadorDatos"
        android:layout_toEndOf="@+id/imageViewJugadorDatos" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Calidad"
        android:id="@+id/textView5"
        android:layout_below="@+id/imageViewJugadorDatos"
        android:layout_alignStart="@+id/textView6" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBarCalidadJugadorDatos"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:numStars="5"
        android:stepSize="0.5"
        style="?android:attr/ratingBarStyle"
        android:isIndicator="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Partidos"
        android:id="@+id/textView6"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/imageViewJugadorDatos" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="200"
        android:id="@+id/textViewPartidosJugadorDatos"
        android:layout_alignTop="@+id/textView6"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Goles"
        android:id="@+id/textView8"
        android:layout_alignTop="@+id/textViewGolesJugadorDatos"
        android:layout_alignStart="@+id/ratingBarCalidadJugadorDatos" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="100"
        android:id="@+id/textViewGolesJugadorDatos"
        android:layout_below="@+id/textViewPartidosJugadorDatos"
        android:layout_alignStart="@+id/textViewPartidosJugadorDatos" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Victorias"
        android:id="@+id/textView10"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="100"
        android:id="@+id/textViewVictoriasJugadorDatos"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignStart="@+id/textViewGolesJugadorDatos" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Puntos"
        android:id="@+id/textView12"
        android:layout_below="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="100"
        android:id="@+id/textViewPuntosJugadorDatos"
        android:layout_below="@+id/textViewVictoriasJugadorDatos"
        android:layout_alignStart="@+id/textViewVictoriasJugadorDatos" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Socio"
        android:id="@+id/textView14"
        android:layout_below="@+id/textView12"
        android:layout_alignStart="@+id/textView12" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sí"
        android:id="@+id/textViewSocioJugadorDatos"
        android:layout_alignTop="@+id/textView14"
        android:layout_alignStart="@+id/textViewPuntosJugadorDatos" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Activo"
        android:id="@+id/textView16"
        android:layout_below="@+id/textView14"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sí"
        android:id="@+id/textViewActivoJugadorDatos"
        android:layout_below="@+id/textViewSocioJugadorDatos"
        android:layout_alignStart="@+id/textViewSocioJugadorDatos" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="100"
        android:id="@+id/textViewGolesPartidoJugadorDatos"
        android:layout_alignTop="@+id/textViewGolesJugadorDatos"
        android:layout_toEndOf="@+id/ratingBarCalidadJugadorDatos" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="100"
        android:id="@+id/textViewVictoriasPartidoJugadorDatos"
        android:layout_alignTop="@+id/textViewVictoriasJugadorDatos"
        android:layout_alignStart="@+id/textViewGolesPartidoJugadorDatos" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="100"
        android:id="@+id/textViewPuntosPartidoJugadorDatos"
        android:layout_below="@+id/textViewVictoriasPartidoJugadorDatos"
        android:layout_alignStart="@+id/textViewVictoriasPartidoJugadorDatos" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Dorsal"
        android:id="@+id/textView"
        android:layout_below="@+id/textViewApodoJugadorDatos"
        android:layout_toEndOf="@+id/imageViewJugadorDatos" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="99"
        android:id="@+id/textViewDorsalJugadorDatos"
        android:layout_below="@+id/textViewApodoJugadorDatos"
        android:layout_alignEnd="@+id/ratingBarCalidadJugadorDatos" />

</RelativeLayout>